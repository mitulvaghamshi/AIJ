<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ll">

    <LinearLayout
        style="@style/ll"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:contentDescription="Login form header image"
            android:scaleType="fitXY"
            android:src="@drawable/img_login" />

        <LinearLayout
            android:id="@+id/login_form"
            style="@style/ll_pad"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/login_fab_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10_dp"
                android:contentDescription="New registration button"
                android:src="@drawable/ic_add_24dp"
                android:tooltipText="Registration"
                app:backgroundTint="@color/blue" />

            <AutoCompleteTextView
                android:id="@+id/login_ed_username"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_marginBottom="@dimen/dimen_10_dp"
                android:background="@drawable/row_button_bar"
                android:drawableStart="@drawable/ic_person_24dp"
                android:hint="Username"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:padding="@dimen/dimen_10_dp" />

            <AutoCompleteTextView
                android:id="@+id/login_ed_password"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_marginBottom="@dimen/dimen_10_dp"
                android:background="@drawable/row_button_bar"
                android:drawableStart="@drawable/ic_lock_24dp"
                android:hint="Password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="@dimen/dimen_10_dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/login_sw_keep_signed"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_marginBottom="@dimen/dimen_10_dp"
                android:background="@drawable/row_button_bar"
                android:paddingHorizontal="@dimen/dimen_10_dp"
                android:text="Keep me signed in."
                app:thumbTint="@android:color/black"
                app:trackTint="@android:color/darker_gray" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/login_fab_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:contentDescription="Submit login form button"
                android:imeOptions="actionGo"
                android:src="@drawable/ic_send_24dp"
                android:tooltipText="Login"
                app:backgroundTint="@color/pink" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
