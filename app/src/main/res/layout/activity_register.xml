<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/scroll_layout">

    <LinearLayout
        style="@style/linear_layout"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp"
            android:contentDescription="Registration header image"
            android:scaleType="fitXY"
            android:src="@drawable/img_registration" />

        <LinearLayout
            android:id="@+id/registration_form"
            style="@style/linear_layout_pad"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/reg_fab_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:contentDescription="Close button"
                android:src="@drawable/ic_close_24"
                android:tooltipText="Back to login"
                app:backgroundTint="@color/red" />

            <AutoCompleteTextView
                android:id="@+id/reg_ed_username"
                style="@style/input_field"
                android:drawableStart="@drawable/ic_person_24dp"
                android:hint="Username"
                android:inputType="text" />

            <AutoCompleteTextView
                android:id="@+id/reg_ed_email"
                style="@style/input_field"
                android:drawableStart="@drawable/ic_email_24dp"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <AutoCompleteTextView
                android:id="@+id/reg_ed_phone"
                style="@style/input_field"
                android:drawableStart="@drawable/ic_call_24dp"
                android:hint="Phone"
                android:inputType="phone" />

            <AutoCompleteTextView
                android:id="@+id/reg_ed_city"
                style="@style/input_field"
                android:drawableStart="@drawable/ic_city_24dp"
                android:hint="City"
                android:inputType="text" />

            <AutoCompleteTextView
                android:id="@+id/reg_ed_password"
                style="@style/input_field"
                android:drawableStart="@drawable/ic_lock_24dp"
                android:hint="Password"
                android:inputType="textPassword" />

            <AutoCompleteTextView
                android:id="@+id/reg_ed_re_password"
                style="@style/input_field"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:drawableStart="@drawable/ic_lock_24dp"
                android:hint="Confirm Password"
                android:inputType="textPassword" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/reg_fab_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:contentDescription="Register button"
                android:src="@drawable/ic_send_24dp"
                android:tooltipText="Register"
                app:backgroundTint="@color/purple" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
