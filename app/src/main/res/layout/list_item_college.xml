<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_layout"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cl_li_container"
        style="@style/linear_layout_pad"
        android:background="@drawable/list_item_bg_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cl_li_name"
            style="@style/linear_layout"
            android:textStyle="bold" />

        <LinearLayout
            style="@style/linear_layout"
            android:layout_marginVertical="@dimen/dimen_5dp">

            <TextView
                android:id="@+id/cl_li_fees"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/cl_li_hostel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5" />
        </LinearLayout>

        <TextView
            android:id="@+id/cl_li_branches"
            style="@style/linear_layout" />
    </LinearLayout>

    <include layout="@layout/include_divider" />
</LinearLayout>
