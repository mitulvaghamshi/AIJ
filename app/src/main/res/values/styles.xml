<resources>

    <style name="linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="linear_layout_pad" parent="linear_layout">
        <item name="android:padding">@dimen/dimen_16dp</item>
    </style>

    <style name="scroll_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="input_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10dp</item>
        <item name="android:drawablePadding">@dimen/dimen_10dp</item>
        <item name="android:background">@drawable/list_item_bg_border</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="home_button_text">
        <item name="android:textSize">@dimen/font_15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="home_section_divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginVertical">@dimen/dimen_10dp</item>
        <item name="android:background">@color/purple</item>
    </style>

    <style name="section_header" parent="linear_layout_pad">
        <item name="android:layout_marginBottom">@dimen/dimen_10dp</item>
        <item name="android:background">@drawable/list_item_bg_img</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="table_cell_label" parent="linear_layout">
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:minWidth">@dimen/dimen_110dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="table_cell_text" parent="linear_layout">
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="table_cell_divider" parent="linear_layout">
        <item name="android:divider">@android:color/darker_gray</item>
        <item name="android:showDividers">middle</item>
    </style>
</resources>
