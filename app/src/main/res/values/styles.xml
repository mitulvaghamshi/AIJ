<resources>

    <style name="ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ll_pad" parent="ll">
        <item name="android:padding">@dimen/dimen_16dp</item>
    </style>

    <style name="tv_inline" parent="ll">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="dev_header_ll" parent="ll">
        <item name="android:background">@drawable/img_header_bg</item>
    </style>

    <style name="dev_header_ll_tv" parent="ll">
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:textSize">@dimen/font_20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="login_tv" parent="ll">
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10dp</item>
        <item name="android:background">@drawable/row_button_bar</item>
        <item name="android:drawablePadding">@dimen/dimen_10dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="hs_btn">
        <item name="android:textSize">@dimen/font_15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="detail_label_tv" parent="ll">
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:minWidth">@dimen/dimen_110dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detail_text_tv" parent="ll">
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ll_divider" parent="ll">
        <item name="android:divider">@android:color/black</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_margin">@dimen/dimen_10dp</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="ll_scroll" parent="ll">
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="closing_tv">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dimen_5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
