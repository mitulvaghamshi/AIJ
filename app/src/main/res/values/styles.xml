<resources>

    <style name="ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ll_pad" parent="ll">
        <item name="android:padding">@dimen/dimen_16_dp</item>
    </style>

    <style name="tv_inline" parent="ll">
        <item name="android:layout_width">@dimen/dimen_0_dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="dev_header_ll" parent="ll">
        <item name="android:background">@drawable/img_header_bg</item>
    </style>

    <style name="dev_header_ll_tv" parent="ll">
        <item name="android:padding">@dimen/dimen_10_dp</item>
        <item name="android:textSize">@dimen/dimen_20_sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="reg_tv" parent="ll">
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:padding">@dimen/dimen_10_dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10_dp</item>
        <item name="android:background">@drawable/row_button_bar</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="hs_btn">
        <item name="android:textSize">@dimen/dimen_15_sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="detail_pin">
        <item name="android:layout_width">@dimen/dimen_25_dp</item>
        <item name="android:layout_height">@dimen/dimen_20_dp</item>
        <item name="android:background">@drawable/img_pin</item>
    </style>

    <style name="detail_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginHorizontal">@dimen/dimen_10_dp</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="detail_scrollview" parent="ll_pad">
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="closing_tv">
        <item name="android:layout_width">@dimen/dimen_0_dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:padding">@dimen/dimen_5_dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
